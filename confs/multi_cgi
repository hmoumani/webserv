server {
    listen localhost 8080;

    http_method GET POST;
    root /tmp/bonus/multi_cgi/;

    location / {
        listing on;
    }
    location .php {
        cgi_pass /goinfre/hmoumani/.brew/opt/php@7.2/bin/php-cgi;
    }
    location .py {
        cgi_pass /usr/bin/python;
    }
    location .pl {
        cgi_pass /usr/bin/perl;
    }
}